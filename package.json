{
  "name": "fontawesome.macro",
  "version": "1.1.0",
  "homepage": "https://github.com/javascripter/fontawesome.macro",
  "description": "Import fontawesome icons automatically with fas('smile') or fas`smile` using this babel macro",
  "repository": {
    "type": "git",
    "url": "https://github.com/javascripter/fontawesome.macro.git"
  },
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@babel/helper-module-imports": "^7.10.4",
    "babel-plugin-macros": "^3.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/fixtures/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write"
    ]
  },
  "keywords": [
    "fontawesome",
    "font",
    "awesome",
    "icon",
    "svg",
    "babel-plugin",
    "babel-plugin-macro",
    "babel-macros",
    "babel-plugin-macros"
  ],
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-regular-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "babel-plugin-tester": "^9.2.0",
    "husky": "^4.2.5",
    "jest": "^28.1.0",
    "lint-staged": "^11.0.0"
  }
}
